<% include ../partials/header %> 



<div class="main">
  
<%  if(products){ %>
<div class="row">
  <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
    <ul class="list-group">
      <% products.forEach(function(products){ %>
         <li class="list-group-item">
        <span class="badge"><%=products.qty%></span>
        <strong><%=products.id%></strong>
        <span class="label label-success">Rs <%=products.price%></span>
        
          <div class="btn-group">
          <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown">Action <span class="caret"></span></button>
          <ul class="dropdown-menu">
            <li><a href="#">Reduce by 1</a></li>
            <li><a href="#">Remove all</a></li>
          </ul>
        </div>
        
      <% }) %>
    </ul>
  </div>
</div>
<div class="row">
  <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
    <strong>Total:<%=totalPrice%></strong>
  </div>
</div>
<hr />
<div class="row">
  <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
    <a href="/paintings/checkout" type="button" class="btn btn-success">Checkout</a>
  </div>
</div>
<% }else{ %>
<div class="row">
  <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
    <h2>No items in cart</h2>
  </div>
</div>
<% } %>



<% include ../partials/footer %>