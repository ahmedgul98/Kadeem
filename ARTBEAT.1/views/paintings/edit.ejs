<% include ../partials/header %>
<div class="container">
    <div class="row">
<h1 style="text-align:center">EDIT <%=found.name%> Painting</h1>
<div style="width:30%; margin: 25px auto">
<form action="/paintings/<%=found._id%>/?_method=PUT" method="POST">
    <div class="form-group">
    <input class="form-control" type="text" name="painting[name]" value="<%=found.name%>">
    </div>
    <div class="form-group">
        <input class="form-control" type="number" name="painting[price]" value="<%= found.price %>">
    </div>
     <div class="form-group">
    <input class="form-control" type="text" name="painting[image]" value="<%=found.image%>">
    </div>
    <div class="form-group">
    <input class="form-control" type="text" name="painting[description]" value="<%=found.description%>">
    </div>
     <div class="form-group">
    <button class="btn btn-lg btn-primary btn-block"> done! </button>
    </div>
</form>
<a href="/paintings">go back</a>
</div>
</div>
</div>
<% include ../partials/footer %>